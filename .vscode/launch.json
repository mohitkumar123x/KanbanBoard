    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/frontend/src/server.js",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {"NODE_ENV":"development","PORT":5000},
            "type": "pwa-node",
            "envFile": "${workspaceFolder}/backend/.env",
            
        },
        
    ]
}